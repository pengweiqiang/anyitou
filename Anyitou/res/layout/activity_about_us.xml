<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/app_bg_color"
        android:text="@string/anyitou_introduce"
        android:textSize="17sp"/>
    <TextView 
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#8f8f8f"
        android:lineSpacingExtra="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/anyitou_introduce_content"
        />
    
    
	 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >
		<View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#c7c7cc" />
        <RelativeLayout
            android:id="@+id/btn_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:textColor="#1b1b1b"
                android:drawableLeft="@drawable/about_weixin_icon"
                android:text="微信"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:text="anyitou"
                android:textColor="#959595"
                android:textSize="17sp"
                 />
        </RelativeLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#c7c7cc" />
        
        <RelativeLayout
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:textColor="#1b1b1b"
                android:drawableLeft="@drawable/about_opinion_icon"
                android:text="意见反馈"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_you" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#c7c7cc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/about_version_number_icon"
                android:text="版本号"
                android:layout_centerVertical="true"
                android:textColor="#1b1b1b"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:textColor="#959595"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:text="V1.0.0"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#c7c7cc" />
        <RelativeLayout
            android:id="@+id/btn_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#1b1b1b"
                android:drawablePadding="10dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/about_phone_icon"
                android:text="客服电话"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_call_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:drawablePadding="14dp"
                android:textColor="@color/app_bg_color"
                android:text="@string/call_custom"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:drawableRight="@drawable/icon_you"/>
        </RelativeLayout>
    </LinearLayout>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="62dp"
            android:background="#c7c7cc" />

   

</LinearLayout>
