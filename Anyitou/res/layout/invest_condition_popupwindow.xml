<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:background="@color/white"
    android:gravity="top" >
	
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品类型"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView 
            android:id="@+id/category_all"
            android:layout_weight="1"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="#a3a3a3"
            />
        
        <TextView 
            android:id="@+id/category_anchedai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安车贷"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/category_anqidai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安企贷"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/category_anfangdai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安房贷"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/category_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="债权转让"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        
    </LinearLayout>
    
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投资状态"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >
        <TextView 
            android:id="@+id/status_all"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="#a3a3a3"
            />
        
        <TextView 
            android:id="@+id/status_repayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款中"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/status_repayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已还款"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/status_part_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部分转让"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/status_all_debt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部转让"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        
    </LinearLayout>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        >
        <TextView 
            android:id="@+id/time_all"
            android:layout_weight="1"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="#a3a3a3"
            />
        
        <TextView 
            android:id="@+id/time_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/time_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一周"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/time_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一个月"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        <TextView 
            android:id="@+id/time_three_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三个月"
            android:layout_weight="1"
            android:textColor="#a3a3a3"
            />
        
    </LinearLayout>
    
	
</LinearLayout>