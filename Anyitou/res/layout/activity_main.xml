<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical" >
    
      <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
      <TextView 
          android:text="推荐项目"
          android:textColor="@color/app_bg_color"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="1dp"
          android:gravity="center"
          android:paddingBottom="1dp"
          android:background="#e7e7e7"
          />
    
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/list_title" >

        <cn.com.anyitou.views.XListView
            android:id="@+id/listView_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
        	android:divider="@color/home_bg"
        	android:dividerHeight="2dp">
        </cn.com.anyitou.views.XListView>

        <!-- <include
            android:id="@+id/empty_listview"
            layout="@layout/empty_listview"
            android:visibility="visible" /> -->
    </FrameLayout>
    
    
</LinearLayout>
