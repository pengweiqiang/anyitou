<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
    <View
	    android:layout_width="fill_parent"
	    android:layout_height="0.10dip"
	    android:layout_marginTop="20dip"
	    android:background="#CCCCCC" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="10dip"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="34dip"
	            android:textSize="17sp"
	            android:textColor="#646464"
	            android:text="新密码:"/>
            
	        <cn.com.anyitou.views.ClearEditText
	            android:id="@+id/new_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="输入新密码"
	            android:textSize="@dimen/text_hint_size"
	            android:inputType="textPassword"
	            android:textColorHint="#cccccc"
	            android:layout_marginLeft="5dip"
	            android:background="@null"/>
	        
        </LinearLayout>
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.10dip"
		    android:layout_marginTop="10dip"
		    android:layout_marginLeft="10dip"
		    android:background="#CCCCCC" />
        <LinearLayout 
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="10dip"
	        android:layout_marginBottom="10dip"
	        android:padding="10dip"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="17sp"
	            android:textColor="#646464"
	            android:text="确认新密码:"/>
	        <cn.com.anyitou.views.ClearEditText
	            android:id="@+id/new_pwd2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dip"
	            android:inputType="textPassword"
	            android:hint="确认新密码"
	            android:textSize="@dimen/text_hint_size"
	            android:textColorHint="#cccccc"
	            android:background="@null"/>
            
        </LinearLayout>
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.10dip"
		    android:background="#CCCCCC" />
    </LinearLayout>
    
    
    <TextView 
        android:id="@+id/btn_finish"
	   	 android:layout_width="match_parent"
	   	 android:layout_height="wrap_content"
	   	 android:layout_marginLeft="10dp"
	   	 android:layout_marginRight="10dip"
	   	 android:layout_marginTop="20dip"
	   	 android:paddingTop="13dip"
	   	 android:paddingBottom="13dip"
	   	 android:gravity="center"
	   	 android:textColor="@color/white"
	   	 android:text="完成"
	   	 android:background="@drawable/btn_app_bg_selector"/>
    
    
   
</LinearLayout>
