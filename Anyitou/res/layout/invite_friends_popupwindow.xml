<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="10dp"
    android:gravity="bottom" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/friendsCancleTextView"
            android:layout_marginBottom="18dip"
            android:paddingTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_wx_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_weixin"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingTop="5dp"
                android:text="微信"
                android:textColor="#1b1b1b" />

            <TextView
                android:id="@+id/share_wx_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_weixin"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="朋友圈"
                android:textColor="#1b1b1b" />

            <!--
                 <TextView 
                android:id="@+id/share_weibo_qq_friend"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="邀请QQ空间好友"
                android:background="@drawable/btn_selector"
                android:gravity="center"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:textColor="#5488ED"/>
            -->

            <TextView
                android:id="@+id/share_weibo_sina_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_weibo"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="微博"
                android:textColor="#1b1b1b" />

            <TextView
                android:id="@+id/share_qq_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/icon_qq"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="QQ"
                android:textColor="#1b1b1b" />
        </LinearLayout>

        <TextView
            android:id="@+id/friendsCancleTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/share_border_cancel"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textColor="#5f5f5f" />
    </LinearLayout>

</RelativeLayout>