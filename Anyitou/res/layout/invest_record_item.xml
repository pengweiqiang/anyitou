<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/home_bg"
     >

    <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cdcdcd"
        android:layout_marginTop="5dp"
        />
   <RelativeLayout
       android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp" 
        android:id="@+id/relativeLayout1">

	        
            <TextView
                android:id="@+id/invest_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="安企贷AQD-20151025"
                android:textColor="#000000"
                android:textStyle="bold" />
            


        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/invest_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/money_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="投资金额"
                    android:textColor="#797979"
                    android:gravity="bottom"
                     />

              <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/money_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:singleLine="true"
                    android:textColor="@color/app_bg_color"
                    android:text="￥1000"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/invest_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="投资时间"
                    android:textColor="#797979" />

                <TextView
                    android:id="@+id/invest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invest_time_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="2015-06-07"
                    android:singleLine="true"
                    android:textColor="#797979"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/end_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="到期时间"
                    android:textColor="#797979" />

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/end_time_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:text="2015-09-26"
                    android:singleLine="true"
                    android:textColor="#797979"
                     />


            </RelativeLayout>

        </LinearLayout>
        
       
        
    </RelativeLayout>
    
   <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cdcdcd"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>