<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_style"
        android:orientation="vertical">
            
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
	        <cn.com.anyitou.views.ClearEditText
	            android:id="@+id/phone"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="请输入手机号码"
	            android:inputType="phone"
	            android:layout_toLeftOf="@+id/get_code"
	            android:padding="15dp"
	            android:textColorHint="#cccccc"
	            android:textSize="@dimen/text_hint_size" />
	        
	        <!-- <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_code_color"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:singleLine="true"
                android:text="获取验证码"
				android:layout_marginRight="8dp"                
                android:textColor="@color/white"
                /> -->
	   </RelativeLayout>     
	        
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.10dip"
		    android:background="#CCCCCC" />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
	        <cn.com.anyitou.views.ClearEditText 
	            android:id="@+id/input_code"
	            android:layout_toLeftOf="@+id/get_code"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="phone"
	            android:padding="15dp"
	            android:hint="请输入验证码"
	            android:textColorHint="#cccccc"
	            android:textSize="@dimen/text_hint_size"
	            android:background="@null"/>
	        
	         <!-- <TextView
                android:id="@+id/time"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余 60 秒"
                android:layout_centerVertical="true"
                android:textColor="@color/grey_line"
                android:layout_alignParentRight="true"
                /> -->
	         <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_code_color"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:singleLine="true"
                android:text="获取验证码"
				android:layout_marginRight="8dp"                
                android:textColor="@color/white"
                />
	   </RelativeLayout>      
            
        <View
		    android:layout_width="fill_parent"
		    android:layout_height="0.10dip"
		    android:background="#CCCCCC" />
        <cn.com.anyitou.views.ClearEditText 
	            android:id="@+id/input_new_password"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:inputType="textPassword"
	            android:padding="15dp"
	            android:hint="请输入新密码"
	            android:textColorHint="#cccccc"
	            android:textSize="@dimen/text_hint_size"
	            android:background="@null"/>
    </LinearLayout>
    
    
    <TextView 
        android:id="@+id/btn_next"
	   	 android:layout_width="match_parent"
	   	 android:layout_height="wrap_content"
	   	 android:layout_marginLeft="15dp"
	   	 android:layout_marginRight="15dip"
	   	 android:layout_marginTop="20dip"
	   	 android:paddingTop="13dip"
	   	 android:paddingBottom="13dip"
	   	 android:gravity="center"
	   	 android:textColor="@color/white"
	   	 android:text="完成"
	   	 android:background="@drawable/login_delete_selector"/>
  <!--   <TextView 
        android:id="@+id/to_register"
        android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:layout_marginTop="10dip"
	   	android:layout_marginRight="15dip"
	   	android:text="还没有账号？点击注册"
	   	android:textColor="#4f79d3"
	   	android:gravity="right"
	   	/> -->
    
   
</LinearLayout>
