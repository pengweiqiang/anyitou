<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:id="@+id/weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/weixin"
                android:background="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="公众账号：zjxd_18link"
                android:textColor="#646464"
                android:textSize="17sp" />
            
            <TextView
                android:id="@+id/copyWeixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="25dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:text="复制成功"
                android:background="@drawable/icon_fuzhix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:onClick="weixinCopy"
                android:background="@drawable/icon_fuzhi" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="20dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:id="@+id/weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_weibo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/weibo"
                android:background="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="新浪微博：@18link"
                android:textColor="#646464"
                android:textSize="17sp" />
            
            <TextView
                android:id="@+id/gongzong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="25dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:text="复制成功"
                android:background="@drawable/icon_fuzhix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:onClick="PublicAccountCopy"
                android:layout_marginTop="2dp"
                android:background="@drawable/icon_fuzhi" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="20dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:id="@+id/qiye_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/qiye_qq"
                android:background="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="企业QQ：2488495574"
                android:textColor="#646464"
                android:textSize="17sp" />
            
            <TextView
                android:id="@+id/qiyeQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="25dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:text="复制成功"
                android:background="@drawable/icon_fuzhix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:onClick="EnterpriseQQCopy"
                android:background="@drawable/icon_fuzhi" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="20dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_up_style" >

            <TextView
                android:id="@+id/qiye_youxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_youxiang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/qiye_youxiang"
                android:background="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="企业邮箱：service@18link.com"
                android:textColor="#646464"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/qiyeYouXiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="25dip"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="5dp"
                android:visibility="gone"
                android:text="复制成功"
                android:background="@drawable/icon_fuzhix" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:onClick="EnterpriseMailboxCopy"
                android:background="@drawable/icon_fuzhi" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="callPhone"
        android:clickable="true"
        android:background="@drawable/set_up_style" >

        <TextView
            android:id="@+id/iphon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="2dp"
            android:background="@drawable/icon_iphon" />

        <TextView
            android:id="@+id/cust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iphon"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:paddingTop="3dp"
            android:layout_centerVertical="true"
            android:text="服务热线："
            android:textColor="#646464"
            android:textSize="17sp"
             />
        <TextView 
            android:id="@+id/cust_num"
            android:layout_toRightOf="@+id/cust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:text="@string/call_custom"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/call_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/sign_out_style" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="拨打电话"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>