<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_style" >

        <cn.com.anyitou.views.ClearEditText
            android:id="@+id/registered_un"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:textSize="@dimen/text_hint_size"
            android:inputType="phone"
            android:hint="手机号码"
            android:singleLine="true"
            android:textColorHint="@color/grey_line"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_remind2"
            android:textSize="13sp"
            android:textColor="@color/grey_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_style" >

        <cn.com.anyitou.views.ClearEditText
            android:id="@+id/registered_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="@dimen/text_hint_size"
            android:hint="登录密码"
            android:singleLine="true"
            android:textColorHint="@color/grey_line"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_remind"
            android:textSize="13sp"
            android:textColor="@color/grey_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_style" >

        <cn.com.anyitou.views.ClearEditText
            android:id="@+id/registered_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:textSize="@dimen/text_hint_size"
            android:singleLine="true"
            android:textColorHint="@color/grey_line"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="必须是6-20个字符长度"
            android:textSize="13sp"
            android:textColor="@color/grey_line" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edit_style" >

            <cn.com.anyitou.views.ClearEditText
                android:id="@+id/registered_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0dp"
                android:background="@null"
                android:hint="验证码"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/text_hint_size"
                android:textColorHint="@color/grey_line"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/get_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@drawable/login_delete_selector" >

            <TextView
                android:id="@+id/get_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="17sp"
                android:text="获取验证码"
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="@drawable/edit_style" >

        <cn.com.anyitou.views.ClearEditText
            android:id="@+id/registered_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:hint="推荐人手机号(选填)"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/grey_line"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_delete_selector" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="注册"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    
    
         
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector"
        android:padding="5dp"
        >
		
        
        <TextView
            android:id="@+id/readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:singleLine="true"
            android:text="我已阅读并同意协议"
            android:layout_alignParentLeft="true"
            android:textColor="#4F7AD3"
             />
        
        
        <TextView
            android:id="@+id/has_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="已有账号登录"
            android:textColor="#4F7AD3"
             />
    </RelativeLayout>
    
    
    </LinearLayout>
	</ScrollView>
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal|bottom"
        android:layout_marginRight="20dp"
        >
        <TextView 
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#81ccbd"
            android:text=">>  注册帐号"
            />
        
         <TextView 
             android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>  开通汇付"
            android:textColor="#5c87e6"
            android:gravity="center"
            
            />
         
          <TextView 
             android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">>  注册完成"
            android:gravity="center"
            android:textColor="#5c87e6"
            
            />
        
        
    </LinearLayout>
    
</LinearLayout>