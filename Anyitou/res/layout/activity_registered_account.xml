    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="@drawable/edit_style" >

        <cn.com.anyitou.views.ClearEditText
            android:id="@+id/registered_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:background="@null"
            android:hint="推荐人手机号(选填)"
            android:inputType="phone"
            android:singleLine="true"
            android:textColorHint="@color/grey_line"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/login_delete_selector" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="下一步"
            android:textSize="17sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    
    
         
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector"
        android:padding="5dp"
        android:gravity="center"
        >
		
        
        <CheckBox
                android:id="@+id/check_title"
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:paddingTop="8dp"
                android:paddingLeft="5dp"
                android:paddingBottom="5dp"
                android:checked="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                style="@style/CustomRadioButtonTheme"
                />
        <TextView 
            android:id="@+id/agree_title"
            android:layout_toRightOf="@+id/check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已同意"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/readed"
            android:layout_toRightOf="@+id/agree_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:singleLine="true"
            android:text="《安宜投网站用户协议》"
            android:textColor="@color/app_bg_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
             />
        
        
        <TextView
            android:id="@+id/has_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="已有账号登录"
            android:visibility="gone"
            android:textColor="#4F7AD3"
             />
    </RelativeLayout>
    
    
    </LinearLayout>
	</ScrollView>
	
