<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
      
    
    <RadioGroup
        android:id="@+id/rg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_backing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="10dp"
        android:paddingBottom="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tab_title_text"
            android:button="@android:color/transparent"
            android:background="@drawable/bg_tab_selector"
            android:checked="true"
            android:text="回款中" />
        <View 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            />

        <RadioButton
            android:id="@+id/radio_investing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp" 
            android:paddingTop="10dp"
        android:paddingBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selector"
            android:textColor="@color/tab_title_text"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="投标中" /> 
             <View 
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            />

        <RadioButton
            android:id="@+id/radio_finished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
        android:paddingBottom="10dp"
            android:textSize="16sp" 
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selector"
            android:textColor="@color/tab_title_text"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="已完成" /> 

    </RadioGroup>
    
    
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <cn.com.anyitou.views.XListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:divider="#00000000"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
             >
        </cn.com.anyitou.views.XListView>

        <include
            android:id="@+id/empty_listview"
            layout="@layout/empty_listview"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>
