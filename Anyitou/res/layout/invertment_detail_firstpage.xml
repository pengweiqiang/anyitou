<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/cn.com.anyitou"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@drawable/investment_detail_bg4"
        android:id="@+id/first_page_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1" >

                <View
                    android:id="@+id/center_view_1"
                    android:layout_width="30dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/invest_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/center_view_1"
                    android:background="@drawable/invest_detail_small_dialog2"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="6dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/center_view_1"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:layout_weight="2" >

                        <TextView
                            android:id="@+id/yearrate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/invest_detail_small_dialog2"
                            android:gravity="center"
                            android:paddingLeft="8dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingRight="6dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1" >

                <View
                    android:id="@+id/center_view_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/invest_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/center_view_2"
                    android:background="@drawable/invest_detail_small_dialog2"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <View
                    android:id="@+id/center_view_bottom"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:weightSum="3" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1.55" >

                        <TextView
                            android:id="@+id/now_money"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/invest_detail_big_dialog2"
                            android:gravity="center"
                            android:paddingBottom="7dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="10dp"
                            android:paddingTop="7dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.8"
                        android:orientation="vertical"
                        android:weightSum="2" >

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="0.73" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.8" >

                            <cn.com.anyitou.views.NumberCircleProgressBar
                                android:id="@+id/finish"
                                android:paddingLeft="2dp"
                                style="@style/NumberCircleProgressBar_Default"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingBottom="2dp"
                                android:layout_centerInParent="true"
                                 />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <View
                    android:id="@+id/center_view"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/now_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/center_view"
                    android:background="@drawable/invest_detail_big_dialog"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:text="已投金额/融资金额"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        
    </RelativeLayout>
    
    <RelativeLayout
            android:id="@+id/next_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/tv_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/tab_title_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/dash_line"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_below="@+id/tv_detail_name"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/dash_line_drawable" />

            <LinearLayout
                android:id="@+id/back_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dash_line"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还款方式:"
                    android:textColor="@color/tab_title_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_back_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/tab_title_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dead_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back_style"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截止时间:"
                    android:textColor="@color/tab_title_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_dead_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="@color/tab_title_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dead_time"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/invest_detail_next" />

            <LinearLayout
                android:id="@+id/bottom_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/next"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" >

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="继续拖动,查看详情"
                    android:textColor="#c8c8c8" />

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/line" />
            </LinearLayout>
        </RelativeLayout>

</RelativeLayout>