<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/home_bg"
     >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    <ScrollView 
        android:layout_below="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/next"
        android:scrollbars="none"
        >
    
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="出让债权信息"
        android:background="#dddddd"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_selector"
         >
        
		
        <EditText
            android:id="@+id/et_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/title_project_name"
            android:background="@null"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:enabled="false"
            android:paddingBottom="10dp"
            android:textColorHint="@color/grey_line"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/title_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称："
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/view_debt_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_selector"
         >
        
		
        <EditText
            android:id="@+id/et_debt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toRightOf="@+id/title_debt_count"
            android:layout_toLeftOf="@+id/right_unit_fen"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:inputType="number"
            android:textColorHint="@color/grey_line"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/title_debt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出让债权份额："
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        <TextView 
            android:id="@+id/right_unit_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="（份）"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/view_publish_profit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_selector"
         >
        
		
        <EditText
            android:id="@+id/et_publish_profit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toLeftOf="@+id/right_profit_unit"
            android:layout_toRightOf="@+id/title_publish_profit"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:inputType="numberDecimal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/grey_line"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/title_publish_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布收益："
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        <TextView 
            android:id="@+id/right_profit_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="（%）"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/view_debt_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_selector"
         >
        
		
        <EditText
            android:id="@+id/et_debt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_toLeftOf="@+id/right_debt_money_unit"
            android:layout_toRightOf="@+id/title_debt_money"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:textColorHint="@color/grey_line"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/title_debt_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出让价格："
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        
         <TextView 
             android:id="@+id/right_debt_money_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="（元）"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
        
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/select_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_selector"
         >
        
		
        <TextView
            android:id="@+id/et_publish_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_date_unit"
            android:layout_toRightOf="@+id/title_publish_date"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:editable="false"
            android:textColorHint="@color/grey_line"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/title_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布期限："
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/et_un_focus"
            />
         <ImageView 
             android:id="@+id/right_date_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/pull_down__num2_icon"
            android:paddingRight="20dp"
            android:layout_centerVertical="true"
            />
        
    </RelativeLayout>
    
    
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
       	 >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手续费："
            android:layout_centerVertical="true"
            android:textColor="#a6a6a6"
            />
		
        <TextView
            android:id="@+id/service_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#a6a6a6"
            android:singleLine="true"
            android:text="0 元"
            />
        
    </RelativeLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="出让债权信息"
        android:background="#dddddd"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        />
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
       	 >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出让方实际收益："
            android:layout_centerVertical="true"
            android:textColor="#a6a6a6"
            />
		
        <TextView
            android:id="@+id/real_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#a6a6a6"
            android:singleLine="true"
            android:text="0 元"
            />
        
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
       	 >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出让方年化收益："
            android:layout_centerVertical="true"
            android:textColor="#a6a6a6"
            />
		
        <TextView
            android:id="@+id/year_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#a6a6a6"
            android:singleLine="true"
            android:text="0 元"
            />
        
    </RelativeLayout>
    
    
    </LinearLayout>

    </ScrollView>



    <RelativeLayout
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_delete_selector"
        android:clickable="true"
         >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>

   

</RelativeLayout>