<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
    <LinearLayout 
        android:layout_below="@+id/actionBar"
        android:layout_above="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
		<TextView 
		    android:id="@+id/invest_name"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="安企贷 AQD-201504-03"
		    android:textColor="@color/tab_title_color"
		    android:paddingTop="10dp"
		    android:background="@color/home_bg"
		    android:paddingBottom="10dp"
		    android:paddingLeft="10dp"
        	android:paddingRight="5dp"
		    />		    
		    
		<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/white"
		    android:paddingTop="15dp"
		    android:paddingBottom="10dp"
		    >
		    <RelativeLayout 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
		        >
		        <TextView 
		            android:id="@+id/year_rate"
		            android:layout_centerHorizontal="true"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="15.00%"
		            android:textColor="@color/app_bg_color"
		            android:textSize="23sp"
		            />
		        <TextView 
		            android:layout_below="@+id/year_rate"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:text="年化收益率"
		            android:textColor="@color/tab_title_color"
		            />
		        
		        
		    </RelativeLayout>
		    
		    <!-- <View 
		        android:layout_width="35dp"
		        android:layout_height="match_parent"
		        android:background="@drawable/dash_grey_drawable"
		        /> -->
		        <View 
		        android:layout_width="4px"
		        android:layout_height="match_parent"
		        android:background="@drawable/dash_line_confirm_drawable"
		        />
		    
		    <RelativeLayout 
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="center"
		        >
		        <TextView 
		            android:id="@+id/invest_day"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="90天"
		            android:textColor="@color/app_bg_color"
		            android:textSize="23sp"
		            android:layout_centerHorizontal="true"
		            />
		        <TextView 
		            android:layout_below="@+id/invest_day"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="融资期限"
		            android:layout_centerHorizontal="true"
		            android:textColor="@color/tab_title_color"
		            />
		        
		        
		    </RelativeLayout>
		    
		    
		</LinearLayout>
        <!-- 可投金额 、可用金额 -->
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="#fff0f0f0"
		    android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingLeft="10dp"
	        android:paddingRight="15dp"
		    >
			<TextView 
			    android:id="@+id/invest_money_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="可投金额："
			    android:textColor="@color/tab_title_color"
			    />
			<TextView 
			    android:id="@+id/invest_money"
			    android:layout_toRightOf="@+id/invest_money_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text=""
			    android:textColor="@color/app_bg_color"
			    />
			
			<TextView 
			    android:id="@+id/useable_money_title"
			    android:layout_toLeftOf="@+id/useable_money"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="可用金额："
			    android:textColor="@color/tab_title_color"
			    />
			<TextView 
			    android:id="@+id/useable_money"
			    android:layout_width="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_height="wrap_content"
			    android:text=""
			    android:textColor="@color/tab_title_color"
			    />
			
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
        	android:background="@drawable/concer_money_bg_style"
        	android:layout_marginLeft="13dp"
        	android:layout_marginRight="8dp"
        	android:layout_marginTop="10dp"
		    >
			<EditText 
			    android:id="@+id/buy_money"
			    android:paddingLeft="10dp"
	        	android:paddingRight="5dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingTop="5dp"
			    android:paddingBottom="5dp"
			    android:background="@null"
			    android:inputType="number"
			    android:layout_toLeftOf="@+id/all_invest"
			    android:layout_centerVertical="true"
			    android:textColorHint="#c9c9c9"
			    android:hint="请按1000元的倍数起投"
			    />
			<TextView 
			    android:id="@+id/all_invest"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="全投"
			    android:paddingBottom="10dp"
			    android:paddingLeft="20dp"
	        	android:paddingRight="20dp"
	        	android:paddingTop="10dp"
			    android:layout_alignParentRight="true"
			    android:textColor="@color/white"
			    android:background="@drawable/btn_right_all_concer_dialog_selector"
			    />
		    
		</RelativeLayout>
		<!-- 预计收益、获取安币 -->
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingLeft="20dp"
	        android:paddingRight="20dp"
		    >
			<TextView 
			    android:id="@+id/pre_profit_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="预计收益："
			    android:textColor="@color/tab_title_color"
			    />
			<TextView 
			    android:id="@+id/pre_profit"
			    android:layout_toRightOf="@+id/pre_profit_title"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="0"
			    android:textColor="@color/app_bg_color"
			    />
			
			<TextView 
			    android:id="@+id/pre_anbi_title"
			    android:layout_toLeftOf="@+id/pre_anbi"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="获取安币："
			    android:textColor="@color/tab_title_color"
			    />
			<TextView 
			    android:id="@+id/pre_anbi"
			    android:layout_width="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_height="wrap_content"
			    android:text="0"
			    android:textColor="@color/app_bg_color"
			    />
			
		</RelativeLayout>
		<!-- 优惠券 -->
		
		<RelativeLayout 
		    android:id="@+id/coupon_rl"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/coupon_invest_selector"
		    android:layout_marginLeft="13dp"
        	android:layout_marginRight="8dp"
        	android:layout_marginTop="10dp"
		    >
			<TextView 
			    android:id="@+id/coupon_name"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="使用优惠券"
			    android:layout_centerVertical="true"
			    android:textColor="@color/white"
			    android:textSize="17sp"
			    />
			<ImageView 
			    android:id="@+id/coupon_right"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
			    android:layout_alignParentRight="true"
			    android:src="@drawable/pull_down__num1_icon"
			    />					    
		    
		</RelativeLayout>
		<ListView 
		    android:id="@+id/coupon_listview"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginLeft="13dp"
        	android:layout_marginRight="8dp"
        	android:layout_marginBottom="2dp"
		    ></ListView>
		
		
        
    </LinearLayout>
    
    
    
    

    
    
    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
       
         >

        <ImageView 
            android:id="@+id/invest_calu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/invest_calculator_icon"
            />
        <TextView
            android:id="@+id/bottom_invest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
             android:background="@drawable/button_code_color"
            android:gravity="center"
            android:padding="10dp"
            android:text="立即投标"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>