<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_main_bg" >

        <TextView
            android:id="@+id/title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="房产抵押周转贷0101001-22"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/home_histogram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/home_histogram" />

        <ImageView
            android:id="@+id/home_circle_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/home_circle_circle" />

        <RelativeLayout
            android:id="@+id/circle_year_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" >

            <ImageView
                android:id="@+id/home_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_circle" />

            <TextView
                android:id="@+id/yearrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="15%+1%"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/yearrate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_histogram"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="年化收益率"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:id="@+id/home_line1"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/yearrate_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/home_line_1" />

        <LinearLayout
            android:id="@+id/num_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_line1"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/home_money"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="50万"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:gravity="right" >

                <TextView
                    android:id="@+id/calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/home_calendar"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="30天"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/home_line2"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_below="@+id/num_title"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_line_2" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_line2"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="的融资项目进行360度实地尽职调查，调查报的融资项目进行360度实地尽职调查，调查报的融资项目进行360度实地尽职调查，调查报的融资项目进行360度实地尽职调查，调查报"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <View
            android:id="@+id/home_line1_2"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_below="@+id/content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/home_line_1" />

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_line1_2"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="8dp"
            android:text="中升德乙/房地产周转贷"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <View
            android:id="@+id/home_line2_2"
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_below="@+id/company"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_line_2" />

        <Button
            android:id="@+id/invest_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_invest_money"
            android:text="@string/invest_money"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>