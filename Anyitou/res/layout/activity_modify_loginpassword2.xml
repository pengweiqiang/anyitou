<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <cn.com.anyitou.views.ActionBar
        android:id="@+id/actionBar"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:layout_height="48dp" >
    </cn.com.anyitou.views.ActionBar>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_style"
        android:orientation="vertical" >



        <cn.com.anyitou.views.ClearEditText
                android:id="@+id/old_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#CCCCCC"
                android:inputType="textPassword"
                android:hint="请输入当前密码"
                android:padding="15dp"
                android:textSize="@dimen/text_hint_size"
                android:background="@null" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/grey_line" />


            <cn.com.anyitou.views.ClearEditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#CCCCCC"
                android:inputType="textPassword"
                android:hint="请输入新密码"
                android:padding="15dp"
                android:textSize="@dimen/text_hint_size"
                android:background="@null" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/grey_line" />


            <cn.com.anyitou.views.ClearEditText
                android:id="@+id/new_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#CCCCCC"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="@dimen/text_hint_size"
                android:hint="请再次输入新密码"
                android:background="@null" />
            
             <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/grey_line" />

        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_delete_selector"
        android:clickable="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </RelativeLayout>
    

</LinearLayout>
