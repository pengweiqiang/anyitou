<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#bbbbbb" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
   <item android:bottom="1px" android:left="1px" android:right="1px"> <!--设置只有底部有边框-->
        <shape>
            <solid android:color="@color/white" />
            <padding
                android:left="5dp"
                android:top="8dp"
                android:bottom="8dp"
                android:right="5dp"
                />
			                
        </shape>
    </item>
</layer-list>